
#:kivy 2.3.0

<NavItem>:
    orientation: "vertical"
    padding: 6, 6
    spacing: 4
    size_hint: 1, 1
    canvas.before:
        Color:
            rgba: (0.22, 0.23, 0.25, 1) if self.active else (0, 0, 0, 0)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12,]
    Image:
        source: root.icon
        size_hint_y: None
        height: "26dp"
    Label:
        text: root.text
        font_size: "12sp"
        color: (0.7, 0.78, 1, 1) if root.active else (0.75, 0.75, 0.78, 1)
        halign: "center"
        valign: "middle"
        text_size: self.size

<BottomNav>:
    size_hint_y: None
    height: "68dp"
    padding: 12, 8
    spacing: 12
    canvas.before:
        Color:
            rgba: 0.10, 0.11, 0.12, 1
        Rectangle:
            pos: self.pos
            size: self.size
    NavItem:
        icon: "assets/home.png"
        text: "Home"
        target: "home"
        active: app.sm_current == "home"
        on_release: app.switch_to(self.target)
    NavItem:
        icon: "assets/calc.png"
        text: "Calculator"
        target: "calc"
        active: app.sm_current == "calc"
        on_release: app.switch_to(self.target)
    NavItem:
        icon: "assets/clipboard.png"
        text: "List"
        target: "list"
        active: app.sm_current == "list"
        on_release: app.switch_to(self.target)
    NavItem:
        icon: "assets/history.png"
        text: "History"
        target: "history"
        active: app.sm_current == "history"
        on_release: app.switch_to(self.target)
